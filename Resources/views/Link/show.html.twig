{% extends 'tymo49ShortlinkBundle:Default:base.html.twig' %}
{% block body %}
    <h1>Link</h1>

    <table>
        <tbody>
            <tr>
                <th>Orginal Link: </th>
                <td>{{ link.link }}</td>
            </tr>
            <tr>
                <th>Short Link: </th>
                <td><a href="{{ url('link_redir', {'linkname': link.name}) }}">
                        {{ url('link_redir', {'linkname': link.name}) }}
                    </a></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('link_index') }}"><input type="button" value="Back"></a>
        </li>
        <li>
            <a href="{{ path('link_edit', { 'id': link.id }) }}"><input type="button" value="Edit"></a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
